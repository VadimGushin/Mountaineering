@{
    Layout = null;
}
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr><td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td><td></td>
            </tr>
            @foreach (var b in ViewBag.Articles)
            {
            <tr>
                <td><p>@b.Date</p></td>
                <td><p>@b.NameArticle</p></td>
                <td><p>@b.Author</p></td>
                <td><p>
                    <img width="100" height="100" src="@b.Img" alt="Alternate Text" /></p></td>

             </tr>
            }
        </table>
    </div>
</body>
</html>